	<!--글 삭제 -->
	<delete id="deleteBoard" parameterType="kosmo.javassem.domain.QnaVO">
		<![CDATA[
		DELETE Qna
		WHERE SEQ = #{seq} AND pass=#{pass}
		]]>
	</delete>
	
	 <!-- 관리자 글 삭제 -->
   <delete id="deleteBoardm" parameterType="kosmo.javassem.domain.QnaVO">
      <![CDATA[
      DELETE QNA
      WHERE SEQ = #{seq}
      ]]>
   </delete>
	
	<!-- 글 상세 -->
	<select id="getBoard" resultType="kosmo.javassem.domain.QnaVO">
		<![CDATA[
		SELECT seq, userid, title, regdate, content, pass
		FROM Qna
		WHERE SEQ = #{seq}
		]]>
	</select>
	
