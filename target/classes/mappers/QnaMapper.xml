	<select id="getBoard" resultType="kosmo.javassem.domain.QnaVO">
		<![CDATA[
		SELECT seq, userid, title, regdate, content, pass
		FROM Qna
		WHERE SEQ = #{seq}
		]]>
	</select>
	
		
	<select id="getBoardList" resultType="kosmo.javassem.domain.QnaVO" >
			
			SELECT *
			FROM Qna
			ORDER BY SEQ DESC
		
	</select> 
	
	
</mapper>