      UPDATE BOARD1 SET
      TITLE = #{title},
      CONTENT = #{content}
      WHERE SEQ = #{seq}
      ]]>
   </update>
 -->   
   
   <delete id="deleteBoard" parameterType="kosmo.javassem.domain.BoardVO">
      <![CDATA[
      DELETE BOARD
      WHERE SEQ = #{seq} AND pass=#{pass}
      ]]>
   </delete>
   
   <select id="getBoard" resultType="kosmo.javassem.domain.BoardVO">
      <![CDATA[
      SELECT seq, userid, title, regdate, content, pass
      FROM BOARD
      WHERE SEQ = #{seq}
      ]]>
   </select>
   
      
