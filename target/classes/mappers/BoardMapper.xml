   <!-- 게시글 리스트 가져오기+검색기능 추가 -->
   	<select id="getBoardList" parameterType="hashmap" resultType="kosmo.javassem.domain.BoardVO"  >
			
			SELECT *
			FROM BOARD
				<where>
				<if test="searchCondition != null">
					${searchCondition} like '%${searchKeyword}%'
				</if>
				</where>
			ORDER BY SEQ DESC
	</select> 
	
	<!-- 총 게시글 갯수 출력 -->
<select id="countBoard" resultType="int">
	SELECT COUNT(*) FROM BOARD
</select>

<!-- 페이징 처리 후 게시글 조회 -->
<select id="selectBoard" resultType="kosmo.javassem.domain.BoardVO">
	SELECT * 
		FROM (
			SELECT ROWNUM RN, A.* 
				FROM (
						SELECT * 
						FROM BOARD 
						ORDER BY SEQ DESC 
						) A
				)
	WHERE RN BETWEEN #{start} AND #{end}
</select>
   
</mapper>