      ]]>
   </delete>
 -->   
   
   <select id="getBoard" resultType="kosmo.javassem.domain.BoardVO">
      <![CDATA[
      SELECT seq, userid, title, regdate, content, pass
      FROM BOARD
      WHERE SEQ = #{seq}
      ]]>
   </select>
   
      
   <select id="getBoardList" resultType="kosmo.javassem.domain.BoardVO" >
         
         SELECT *
         FROM BOARD
         ORDER BY SEQ DESC
      
   </select> 
   
   
</mapper>