<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ThemeDAO">


   
   <select id="themeAll"  resultType="kosmo.javassem.domain.ThemeVO">
      SELECT * FROM Theme    
         <if test="themegenre != null"> 
         <where>
            themegenre = #{themegenre}
         </where>
         </if>

      ORDER BY picture asc    
   </select>  

   <select id="themeSang"  resultType="kosmo.javassem.domain.ThemeVO">
      SELECT * 
      FROM Theme    
        <where>
           picture = #{picture}
        </where>
     
   </select>  
 
   
    
